BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            id: miles_input
            on_text_validate: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        id: convert_button
        text: 'Convert miles to km'
        on_press: app.handle_calculate()
    Label:
        id: km_output
        color: (1,1,0,1)
        text: app.km_output